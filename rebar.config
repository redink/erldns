%%-*- mode: erlang -*-
{cover_enabled, true}.

{erl_opts, [debug_info,
            {platform_define, "^[0-9]+", namespaced_types}]}.

{deps, [folsom,
        jsx,
        {dns, ".*", {git, "git://github.com/dnsimple/dns_erlang.git", {branch, "master"}}},
        iso8601
]}.

{profiles, [{test, [{deps, [proper]}]}]}.

{shell, [{apps, [erldns]},
         {config, "erldns.config.example"}]}.

%% This is a rebar3-ism
{overrides, [
    {override, dns,
        [
            {plugins,[
                {provider_asn1, "0.2.3"}
            ]},
            {provider_hooks, [
                {pre, [
                    {compile, {asn, compile}}
                ]},
                {post, [
                    {clean, {asn, clean}}
                ]}
            ]}
        ]
    }
]}.
